{
  "manifest_version": 3,
  "name": "TeamSpirit Info Display",
  "version": "1.1.0",
  "description": "TeamSpiritのホーム画面に勤怠情報を表示する拡張機能",
  "permissions": [
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://teamspirit-74532.lightning.force.com/*",
    "https://*.force.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://teamspirit-74532.lightning.force.com/*",
        "https://*.force.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
